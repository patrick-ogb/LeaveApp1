@model LeaveRequestDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row justify-content-around m-3">
    <div class="col-sm-8">
        <div class="card mt-3">
            <div class="card-header">
                <h1 class="text-center"> @Model.LeaveRequest.ApprovedBy</h1>
            </div>
            <div class="card-body text-center">
                <h4>Department ID: @Model.LeaveRequest.Id</h4>
                <h4>Description: @Model.LeaveRequest.EmployeeId</h4>
                <h4>Date Created: @Model.LeaveRequest.RequestDate</h4>
                <h4>Date Modified: @Model.LeaveRequest.RequestDate</h4>
                <h4>Date Modified: @Model.LeaveRequest.LeaveTypeId</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Level" asp-action="Index" class="btn btn-outline-primary">Back</a>
                <a asp-action="Edit" asp-controller="Level" asp-route-id="@Model.LeaveRequest.Id"
                   class="btn btn-outline-success">Edit</a>
                <a asp-action="Delete" asp-controller="Level" asp-route-id="@Model.LeaveRequest.Id" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
