@model DepartmentCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center display-4 text-primary">CREATE NEW DEPARTMENT</h1>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Department" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Department.Name" class="col-form-label"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="Department.Name" class="form-control" />
                    <span asp-validation-for="Department.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Department.Description" class="col-form-label"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="Department.Description" class="form-control" />
                    <span asp-validation-for="Department.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-info ml-5">Back to List</a>
                </div>
            </div>
        </form>
        <b>@ViewBag.messages</b>
    </div>
</div>



