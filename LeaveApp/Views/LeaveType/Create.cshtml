@model LeaveTypeCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center display-4 text-primary">Create New LeaveType</h1>

<hr />
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="LeaveType.Name" class="col-form-label"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="LeaveType.Name" class="form-control" />
                    <span asp-validation-for="LeaveType.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="LeaveType.NumberOfDays" class="col-form-label"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="LeaveType.NumberOfDays" class="form-control" />
                    <span asp-validation-for="LeaveType.NumberOfDays" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="LeaveType.Discription" class="col-form-label"></label>
                </div>
                <div class="col-sm-9">
                    <input asp-for="LeaveType.Discription" class="form-control" />
                    <span asp-validation-for="LeaveType.Discription" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-info ml-5">Back to List</a>
            </div>
        </form>
    </div>
</div>


